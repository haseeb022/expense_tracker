extend layout/main.pug
block content
  .container.mt-5
    .row
      .col
        .tex-center
          .heading All Categories
    //- button.button.button4(type='button' onclick="alert('Hello world!')") Add New Expense
  .container.mt-3
    .row.d-flex.justify-content-center
      table.table.table-bordered.table-striped.table-hover
        thead.thead-dark
          tr
            th SN
            th Category Name
            th Action
        tbody
            for cat in categories 
                tr
                    td #{cat.id}
                    td #{cat.name}
                    td
                        button.btn.btn-info(type='button' )(style="margin: 0px 5px;") View
                        button.btn.btn-success(type='button' )(style="margin: 0px 5px;") Update
                        button.btn.btn-danger(type='button' )(style="margin: 0px 5px;") Delete
